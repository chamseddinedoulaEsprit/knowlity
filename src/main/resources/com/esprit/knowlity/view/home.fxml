<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750" prefWidth="1200" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2b5876, #4e4376);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.knowlity.controller.HomeController">
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <content>
            <VBox alignment="CENTER" minHeight="750" minWidth="1200" style="-fx-background-color: transparent;">
                <VBox alignment="CENTER" maxWidth="480" spacing="28" style="-fx-background-color: rgba(255,255,255,0.97); -fx-background-radius: 32; -fx-padding: 36 44 36 44; -fx-effect: dropshadow(gaussian, #22222255, 18, 0.16, 0, 3);">
                    <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, #185a9d44, 8, 0.18, 0, 2);">
                        <image>
                            <Image url="@../../../../images/logo.png" />
                        </image>
                    </ImageView>
                    <Text style="-fx-font-size: 44px; -fx-fill: linear-gradient(to right, #43cea2, #185a9d); -fx-font-family: 'Segoe UI Semibold'; -fx-effect: dropshadow(gaussian, #185a9d33, 4, 0.12, 0, 1);" text="Knowlity" />
                    <Text style="-fx-font-size: 20px; -fx-fill: #444c5c; -fx-font-family: 'Segoe UI'; -fx-padding: 0 0 8 0;" text="Course Evaluation Platform" />
                    <HBox alignment="CENTER" spacing="32">
                        <Button fx:id="studentButton" prefHeight="54" prefWidth="160" style="-fx-background-radius: 22; -fx-font-size: 19px; -fx-background-color: linear-gradient(to right, #43cea2, #185a9d); -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-effect: dropshadow(gaussian, #43cea2aa, 3, 0.13, 0, 1);" text="Student">
                            <graphic>
                                <ImageView fitHeight="22.0" fitWidth="22.0" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../../images/student_icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="teacherButton" prefHeight="54" prefWidth="160" style="-fx-background-radius: 22; -fx-font-size: 19px; -fx-background-color: linear-gradient(to right, #ff512f, #dd2476); -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold'; -fx-effect: dropshadow(gaussian, #ff512faa, 3, 0.13, 0, 1);" text="Teacher">
                            <graphic>
                                <ImageView fitHeight="22.0" fitWidth="22.0" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../../images/teacher_icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>